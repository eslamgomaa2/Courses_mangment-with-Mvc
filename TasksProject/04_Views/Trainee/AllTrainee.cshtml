        <div class="input-group">
            <input type="text" name="searchString" class="form-control rounded-start-pill"
                   placeholder="Search by name, address, or department..." value="@Context.Request.Query["search"]" />
            <button type="submit" class="btn btn-primary rounded-end-pill">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form> *@

   
    <div class="table-responsive shadow-sm rounded-4">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Grade</th>
                    <th>Address</th>
                    <th>Department</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var trainee in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/@trainee.Image"
                                 alt="@trainee.Name"
                                 style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%;" />
                        </td>
                        <td class="fw-semibold">@trainee.Name</td>
                        <td>
                            <span class="badge bg-@(trainee.Grade >= 75 ? "success" : trainee.Grade >= 50 ? "warning" : "danger")">
                                @trainee.Grade
                            </span>
                        </td>
                        <td>@trainee.Address</td>
                        <td>@trainee.Department?.Name</td>
                        <td class="text-center">
                            <a asp-action="EditTrainee" asp-controller="Trainee" asp-route-id="@trainee.Id" class="btn btn-sm btn-warning rounded-pill me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="TraineeDetails" asp-controller="Trainee" asp-route-id="@trainee.Id" class="btn btn-sm btn-info text-white rounded-pill me-1">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="DeleteTrainee" asp-controller="Trainee" asp-route-id="@trainee.Id"
                               onclick="return confirm('Are you sure you want to delete this trainee?');"
                               class="btn btn-sm btn-danger rounded-pill">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
