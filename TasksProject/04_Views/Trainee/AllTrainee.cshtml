@model IEnumerable<TasksProject.Models.Trainee>

@{
    ViewData["Title"] = "All Trainees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">All Trainees</h2>
        <a asp-action="AddTrainee" asp-controller="Trainee" class="btn btn-success rounded-pill px-4">
            <i class="bi bi-plus-circle"></i> Add New Trainee
        </a>
    </div>
    <form asp-action="Search" asp-controller="Trainee" method="get" class="mb-4">
        <div class="input-group ">
            <input type="text" name="search" class="form-control rounded-start-pill"
                   placeholder="Search by name..." value="@Context.Request.Query["search"]" />
            <button type="submit" class="btn btn-primary rounded-end-pill">
                <i class="bi bi-search "></i> Search
            </button>
        </div>
    </form>

   
