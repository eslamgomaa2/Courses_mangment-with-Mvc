@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">Admin Dashboard</h1>
        <div class="w-24 h-1 bg-blue-500 mx-auto rounded-full"></div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <!-- Total Courses Card -->
        <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-3xl font-bold mb-1">@ViewBag.TotalCourses</h3>
                    <p class="text-blue-100 font-medium">Total Courses</p>
                </div>
                <div class="bg-white bg-opacity-20 p-3 rounded-lg">
                    <i class="fas fa-graduation-cap text-2xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Trainees Card -->
        <div class="bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-3xl font-bold mb-1">@ViewBag.TotalTrainees</h3>
                    <p class="text-emerald-100 font-medium">Total Trainees</p>
                </div>
                <div class="bg-white bg-opacity-20 p-3 rounded-lg">
                    <i class="fas fa-users text-2xl"></i>
                </div>
            </div>
        </div>

        <!-- Total Instructors Card -->
        <div class="bg-gradient-to-br from-amber-500 to-amber-600 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 p-6 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <h3 class="text-3xl font-bold mb-1">@ViewBag.TotalInstructors</h3>
                    <p class="text-amber-100 font-medium">Total Instructors</p>
                </div>
                <div class="bg-white bg-opacity-20 p-3 rounded-lg">
                    <i class="fas fa-chalkboard-teacher text-2xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Management Actions -->
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Management Panel</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <a asp-action="GetAllCourses" asp-controller="Course" class="bg-gray-800 hover:bg-gray-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors duration-300 flex flex-col items-center justify-center text-center group">
                <i class="fas fa-book text-xl mb-2 group-hover:scale-110 transition-transform duration-300"></i>
                <span>Manage Courses</span>
            </a>
            <a asp-action="GetAllDepartments" asp-controller="Department" class="bg-gray-800 hover:bg-gray-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors duration-300 flex flex-col items-center justify-center text-center group">
                <i class="fas fa-building text-xl mb-2 group-hover:scale-110 transition-transform duration-300"></i>
                <span>Manage Departments</span>
            </a>
            <a asp-action="AllInstructor" asp-controller="Instructor" class="bg-gray-800 hover:bg-gray-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors duration-300 flex flex-col items-center justify-center text-center group">
                <i class="fas fa-user-tie text-xl mb-2 group-hover:scale-110 transition-transform duration-300"></i>
                <span>Manage Instructors</span>
            </a>
            <a asp-action="AllTrainee" asp-controller="Trainee" class="bg-gray-800 hover:bg-gray-700 text-white font-semibold py-4 px-6 rounded-lg transition-colors duration-300 flex flex-col items-center justify-center text-center group">
                <i class="fas fa-user-graduate text-xl mb-2 group-hover:scale-110 transition-transform duration-300"></i>
                <span>Manage Trainees</span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3b82f6',
                        success: '#10b981',
                        warning: '#f59e0b',
                        dark: '#1f2937'
                    }
                }
            }
        }
    </script>
}

