@model List<Instructor>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <h3 class="mb-2 mb-sm-0"><i class="bi bi-people-fill"></i> Instructors List</h3>

                <div class="d-flex flex-wrap align-items-center gap-3">

                   
                    <form asp-action="SearchedInstructor" asp-controller="Instructor" method="get" class="d-flex align-items-center gap-2">
                        <div class="input-group input-group-sm shadow-sm">
                            <input type="text" name="search" class="form-control border-primary"
                                   placeholder="Search by name..." value="@Context.Request.Query["search"]" />
                            <button type="submit" class="btn btn-light fw-semibold">
                                <i class="bi bi-search me-1"></i> Search
                            </button>
                        </div>
                    </form>

                    
                    <a asp-action="AddInstructor" asp-controller="Instructor"
                       class="btn btn-light btn-sm fw-semibold shadow-sm">
                        <i class="bi bi-plus-circle"></i> Add Instructor
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 25%;">Name</th>
                        <th style="width: 15%;">Salary</th>
                        <th style="width: 20%;">Image</th>
                        <th style="width: 25%;">Address</th>
                        <th style="width: 15%;" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle"></i> No instructors found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="/Instructor/GetInstructorDetails?id=@item.Id"
                                       class="text-decoration-none fw-semibold text-primary">
                                        <i class="bi bi-person-circle"></i> @item.Name
                                    </a>
                                </td>
                                <td>@item.Salary.ToString("C0")</td>
                                <td>
                                    <img src="@Url.Content("~/Images/" + item.Image)"
                                         alt="@item.Name"
                                         class="rounded-circle shadow-sm border border-2"
                                         style="width:70px; height:70px; object-fit:cover;" />
                                </td>
                                <td>@item.Address</td>
                                <td class="text-center">
                                    <a href="/Instructor/EditInstructor?id=@item.Id"
                                       class="btn btn-outline-primary btn-sm px-3 me-2">
                                        <i class="bi bi-pencil-square me-1"></i> Update
                                    </a>
                                    <button type="button"
                                            class="btn btn-outline-danger btn-sm px-3"
                                            onclick="confirmDelete('@item.Id')">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer text-muted text-end small">
            Total Instructors: @Model.Count
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/Instructor/DeleteInstructor?id=' + id;
                }
            });
        }
    </script>
}
