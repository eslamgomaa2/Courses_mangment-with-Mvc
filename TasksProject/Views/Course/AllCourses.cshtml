@{
    ViewData["Title"] = "AllCourses";
    Layout = "_layout";
}
@model List<Course>

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-book-half"></i> Course List</h3>
            <div class="d-flex flex-wrap align-items-center gap-3">
             
                <form asp-action="CourseSearch" asp-controller="Course" method="get" class="d-flex align-items-center gap-2">
                    <div class="input-group input-group-sm shadow-sm">
                        <input type="text" name="search" class="form-control border-primary"
                               placeholder="Search by name..." value="@Context.Request.Query["search"]" />
                        <button type="submit" class="btn btn-light fw-semibold">
                            <i class="bi bi-search me-1"></i> Search
                        </button>
                    </div>
                </form>

               
                <a asp-action="AddCourse" asp-controller="Course"
                   class="btn btn-light btn-sm fw-semibold shadow-sm">
                    <i class="bi bi-plus-circle"></i> Add course
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 20%;">Name</th>
                        <th style="width: 15%;">Hours</th>
                        <th style="width: 15%;">Degree</th>
                        <th style="width: 15%;">MinDegree</th>
                        <th style="width: 20%;">Department ID</th>
                        <th style="width: 15%;" class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="/Instructor/GetInstructorDetails?id=@item.Id"
                                   class="text-decoration-none fw-semibold text-primary">
                                    <i class="bi bi-journal-text"></i> @item.Name
                                </a>
                            </td>
                            <td>@item.Hours</td>
                            <td>@item.Degree</td>
                            <td>@item.MinDegree</td>
                            <td>@item.DepartmentId</td>

                            <td class="text-center">
                                <a href="/Course/UpdateCourse?id=@item.Id"
                                   class="btn btn-outline-primary btn-sm px-3 me-2">
                                    <i class="bi bi-pencil-square me-1"></i> Update
                                </a>
                                <a href="/Course/DeleteCourse?id=@item.Id"
                                   class="btn btn-outline-danger btn-sm px-3"
                                   onclick="confirmDelete('@item.Id')">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer text-muted text-end small">
            Total Courses: @Model.Count
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/course/Deletecourse?id=' + id;
                }
            });
        }
    </script>
    }
