@using TasksProject._06_ViewModel
@model ForgetPasswordViewModel

@{
    ViewData["Title"] = "Forget Password";
}

<style>
    body {
        background: linear-gradient(135deg, #e3f2fd 0%, #ffffff 100%);
        font-family: 'Segoe UI', sans-serif;
        height: 100vh;
    }

    .forget-card {
        border-radius: 16px;
        border: none;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

        .forget-card h2 {
            color: #0d6efd;
            font-weight: 700;
        }

    .btn-blue {
        background-color: #0d6efd;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px;
        transition: 0.3s;
    }

        .btn-blue:hover {
            background-color: #0b5ed7;
            color: white;
        }

    .back-link {
        font-size: 0.9rem;
        color: #6c757d;
        transition: 0.3s;
    }

        .back-link:hover {
            color: #0d6efd;
            text-decoration: underline;
        }
</style>

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card forget-card p-4" style="width: 100%; max-width: 400px;">
        <div class="text-center mb-4">
            <h2>Forget Password</h2>
            <hr class="mt-1" />
            <p class="text-muted small">Enter your email to reset your password.</p>
        </div>

        <form asp-action="SaveForgetPassword" asp-controller="Account">

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit"  class="btn btn-blue">Send Reset Link</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-action="login" asp-controller="Account " class="back-link">← Back to Login</a>
        </div>
    </div>
</div>


