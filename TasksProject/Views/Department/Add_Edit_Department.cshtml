@model TasksProject.Models.Department

@{
    ViewData["Title"] = "Add / Edit Department";
}

<style>
    .form-title {
        color: #0d6efd;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .card-custom {
        border: 1px solid #0d6efd;
        border-radius: 12px;
    }

    .btn-blue {
        background-color: #0d6efd;
        color: white;
        border-radius: 6px;
    }

        .btn-blue:hover {
            background-color: #0b5ed7;
            color: white;
        }

    .back-link {
        color: #0d6efd;
        font-weight: 500;
        text-decoration: none;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="container mt-4">

    <h2 class="form-title">Add / Edit Department</h2>

    <div class="card card-custom shadow-sm p-4">

        <form asp-action="AddDepartment">


            @if (Model != null && Model.Id != 0)
            {
                <input type="hidden" asp-for="Id" />
            }

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Manger" class="form-label"></label>
                <input asp-for="Manger" class="form-control" />
                <span asp-validation-for="Manger" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-blue px-4">Save</button>

        </form>

    </div>

    <div class="mt-3">
        <a asp-action="GetAllDepartments" asp-controller="Department" class="back-link">← Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
